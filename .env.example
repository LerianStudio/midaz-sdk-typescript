# Midaz SDK Environment Configuration

# API Key for authentication
MIDAZ_API_KEY=your-api-key-here

# Service URLs
MIDAZ_ONBOARDING_URL=http://localhost:3000/v1
MIDAZ_TRANSACTION_URL=http://localhost:3001/v1

# Debug mode (true/false)
MIDAZ_DEBUG=false

# HTTP Client Configuration
MIDAZ_HTTP_TIMEOUT=30000
MIDAZ_HTTP_MAX_RETRIES=3
MIDAZ_HTTP_INITIAL_RETRY_DELAY=100
MIDAZ_HTTP_MAX_RETRY_DELAY=1000

# Retry Policy Configuration
MIDAZ_RETRY_MAX_RETRIES=3
MIDAZ_RETRY_INITIAL_DELAY=100
MIDAZ_RETRY_MAX_DELAY=1000
MIDAZ_RETRY_STATUS_CODES=408,429,500,502,503,504

# Worker Pool Configuration
MIDAZ_WORKER_POOL_CONCURRENCY=5
MIDAZ_WORKER_POOL_ORDERED=true
MIDAZ_WORKER_POOL_PRESERVE_ORDER=true
MIDAZ_WORKER_POOL_BATCH_DELAY=0
MIDAZ_WORKER_POOL_CONTINUE_ON_ERROR=true
MIDAZ_WORKER_POOL_TIMEOUT=30000
MIDAZ_WORKER_BATCH_SIZE=50
MIDAZ_WORKER_THROTTLE_DELAY=500

# Chunk Size (for concurrent processes) Configuration
MIDAZ_DEFAULT_CHUNK_SIZE=50

# Cache Configuration
MIDAZ_CACHE_ENABLED=false
MIDAZ_CACHE_TTL=60000
MIDAZ_CACHE_MAX_ENTRIES=100
MIDAZ_CACHE_USE_LRU=true

# Rate Limiter Configuration
MIDAZ_RATE_LIMIT_MAX_REQUESTS=100
MIDAZ_RATE_LIMIT_TIME_WINDOW_MS=60000
MIDAZ_RATE_LIMIT_QUEUE_EXCEEDED=true
MIDAZ_RATE_LIMIT_MAX_QUEUE_SIZE=1000

# Observability Configuration
MIDAZ_ENABLE_TRACING=false
MIDAZ_ENABLE_METRICS=false
MIDAZ_ENABLE_LOGGING=false
MIDAZ_SERVICE_NAME=midaz-typescript-sdk
MIDAZ_COLLECTOR_ENDPOINT=http://localhost:4318

# Test timeout in milliseconds (for long-running tests)
TEST_TIMEOUT=30000