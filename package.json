{
  "name": "@lerianstudio/midaz-sdk",
  "version": "1.2.0",
  "description": "Official TypeScript SDK for the Midaz financial API - Build powerful financial applications with type-safe, modern JavaScript/TypeScript",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "dev": "npm run build:watch",
    "setup": "npm install",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:ci": "jest --ci --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src tests examples --fix --max-warnings=1000",
    "lint:fix": "eslint src tests examples --fix --max-warnings=1000",
    "lint:check": "eslint src tests examples --max-warnings=1000",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "size": "bundlewatch",
    "examples": "npm run example:new-features",
    "example:new-features": "npx ts-node --project tsconfig.examples.json examples/new-features-example.ts"
  },
  "keywords": [
    "midaz",
    "financial",
    "ledger",
    "api",
    "sdk",
    "typescript",
    "javascript",
    "client",
    "library",
    "fintech",
    "accounting",
    "transactions",
    "balance",
    "payments"
  ],
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LerianStudio/midaz-sdk-typescript.git"
  },
  "homepage": "https://github.com/LerianStudio/midaz-sdk-typescript#readme",
  "bugs": {
    "url": "https://github.com/LerianStudio/midaz-sdk-typescript/issues"
  },
  "author": {
    "name": "Lerian Studio",
    "email": "developers@lerianstudio.com",
    "url": "https://lerianstudio.com"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.18.0 <25",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.0",
    "@commitlint/config-conventional": "^19.7.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.32.1",
    "bundlewatch": "^0.4.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./dist/index.js",
        "maxSize": "100kb"
      },
      {
        "path": "./dist/esm/index.js",
        "maxSize": "100kb"
      }
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
